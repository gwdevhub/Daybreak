<div class="container">
    <div class="backdrop-panel">
        <div class="message">
            <h3>@this.ViewModel.Message</h3>
            <p>Do you want to restart Daybreak with normal user rights?</p>
            <div class="button-group">
                <FluentButton Appearance="Appearance.Accent" OnClick="this.ViewModel.RestartApplicationAsNormalUser">Confirm</FluentButton>
                <FluentButton Appearance="Appearance.Neutral" OnClick="this.ViewModel.CancelRequest">Cancel</FluentButton>
            </div>
        </div>
    </div>
</div>

@inherits ElevationViewBase<RequestDelevationView, RequestDelevationViewModel>
@page "/request-delevation"
