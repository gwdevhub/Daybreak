<div class="stretch-container backdrop-panel">
    <div class="trade-chat-container">
        @if (this.ViewModel.TradeChatUrl is not null)
        {
            <BlazorFrame Src="@this.ViewModel.TradeChatUrl"
                         Width="100%"
                         Height="100%"/>
        }
    </div>
</div>

@page "/trade-chat/{Source}"
@using Daybreak.Services.TradeChat.Models
@inherits ViewBase<TradeChatView, TradeChatViewModel>
@code {
    [Parameter]
    public required string Source { get; init; }
}