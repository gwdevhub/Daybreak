<div class="progress-content">
    @if (!this.ContinueEnabled)
    {
        <div class="progress-section">
            <div class="progress-bar">
                <div class="progress-fill" style="width: @(this.Progress * 100)%"></div>
            </div>
            <div class="progress-percentage">
                @(Math.Round(this.Progress * 100, 1))%
            </div>
        </div>
    }

    <div class="description-section">
        <p class="progress-description">@this.Description</p>
    </div>
    @if (this.ContinueEnabled)
    {
        <div class="button-section">
            <FluentButton Appearance="Appearance.Accent" OnClick="this.Continue">
                Continue
            </FluentButton>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Description { get; set; } = string.Empty;

    [Parameter]
    public double Progress { get; set; } = 0.0;

    [Parameter]
    public bool ContinueEnabled { get; set; } = false;

    [Parameter]
    public Action? Continue { get; set; }
}
