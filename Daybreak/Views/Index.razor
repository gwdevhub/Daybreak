<App>
    <div class="home-page">
        <h1>Welcome to Daybreak</h1>
        <p>This is the main application dashboard.</p>
        
        <div class="demo-sections">
            <div class="demo-section">
                <h3>Navigation Demo</h3>
                <p>Click the menu button (☰) in the top-left to open the navigation panel.</p>
                <p>The navigation panel contains all your existing menu categories and buttons.</p>
            </div>
            
            <div class="demo-section">
                <h3>Window Controls</h3>
                <p>The title bar is fully functional:</p>
                <ul>
                    <li>Click and drag to move the window</li>
                    <li>Use the bug button to report issues</li>
                    <li>Use the download button for updates</li>
                </ul>
            </div>
            
            <div class="demo-section">
                <h3>Notifications</h3>
                <p>Notifications appear in the top-right corner automatically.</p>
                <p>Click on notifications to interact with them.</p>
            </div>
            
            <div class="demo-section">
                <h3>Status Information</h3>
                <p>The bottom status bar shows:</p>
                <ul>
                    <li>Current version information</li>
                    <li>Administrator status</li>
                    <li>Background image credits</li>
                </ul>
            </div>
        </div>

        <div class="interactive-demo">
            <h3>Interactive Test</h3>
            <button class="btn" @onclick="IncrementCounter">
                Counter: @currentCount
            </button>
            
            <div style="margin-top: 20px;">
                <input type="text" @bind="textInput" placeholder="Type something..." 
                       style="padding: 8px; margin-right: 10px; border-radius: 4px; border: 1px solid #ccc;" />
                <span style="color: white;">You typed: @textInput</span>
            </div>
        </div>
    </div>
</App>

@namespace Daybreak.Views

@code {
    private int currentCount = 0;
    private string textInput = "";

    private void IncrementCounter()
    {
        currentCount++;
    }
}
