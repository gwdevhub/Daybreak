<Window
    x:Class="Daybreak.Launch.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Daybreak.Controls"
    xmlns:converters="clr-namespace:Daybreak.Shared.Converters;assembly=Daybreak.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Daybreak.Launch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    x:Name="_this"
    Title="SplashWindow"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStyle="None"
    mc:Ignorable="d">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="12"
            GlassFrameThickness="0"
            NonClientFrameEdges="None"
            ResizeBorderThickness="0"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <StackPanel Width="580" Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="100"
                Foreground="{Binding ElementName=_this, Path=Foreground, Mode=OneWay}"
                Text="DA" />
            <controls:GoldenArrowGlyph
                Height="100"
                VerticalAlignment="Center"
                Background="Transparent" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="100"
                Foreground="{Binding ElementName=_this, Path=Foreground, Mode=OneWay}"
                Text="BREAK" />
        </StackPanel>
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding ElementName=_this, Path=SplashText, Mode=OneWay}"
            FontSize="16" />
    </Grid>
</Window>
