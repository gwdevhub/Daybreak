<Window x:Class="Daybreak.Launch.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Daybreak.Launch"
        xmlns:glyphs="clr-namespace:Daybreak.Controls.Glyphs"
        xmlns:converters="clr-namespace:Daybreak.Converters;assembly=Daybreak.Shared"
        xmlns:controls="clr-namespace:Daybreak.Controls"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{StaticResource Daybreak.Brushes.Background}"
        mc:Ignorable="d"
        x:Name="_this"
        Title="SplashWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="FontColor" Color="{StaticResource MahApps.Colors.ThemeForeground}"></SolidColorBrush>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Width="650">
            <Label Content="D"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center"/>
            <Label Content="A"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center" />
            <controls:GoldenArrowGlyph 
                   Background="Transparent"
                   Foreground="{StaticResource FontColor}"
                   Height="100"
                   VerticalAlignment="Center" />
            <Label Content="B"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center" />
            <Label Content="R"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center" />
            <Label Content="E"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center" />
            <Label Content="A"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center" />
            <Label Content="K"
                   FontSize="100"
                   Foreground="{StaticResource FontColor}"
                   VerticalAlignment="Center" />
        </StackPanel>
        <Label Content="{Binding ElementName=_this, Path=StartupStatus.CurrentStep.Description, Mode=OneWay}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="1"
               FontSize="16"
               Foreground="{StaticResource FontColor}"/>
    </Grid>
</Window>
